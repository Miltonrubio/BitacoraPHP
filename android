
    EditText editTextUser, editTextUserTel, editTextUserContra;

    String str_nombre, str_tel, str_contra;

    String url="http://192.168.1.124/android/nuevoUsuario.php";






        editTextUser=findViewById(R.id.editTextUser);

        editTextUserContra=findViewById(R.id.editTextUserContra);

        editTextUserTel=findViewById(R.id.editTextUserTel);

        TextView myTextView = findViewById(R.id.textviewingresar);




        Button btnInsertar = findViewById(R.id.btnInsertar);

        btnInsertar.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {

                Registrar();
            }
        });



    public  void Registrar (){

        final ProgressDialog progressDialog = new ProgressDialog(this);

        progressDialog.setMessage("Validando");


        if (editTextUser.getText().toString().equals("")){
            Toast.makeText(this, "Ingresa el nombre", Toast.LENGTH_SHORT).show();
        }

        else if (editTextUserContra.getText().toString().equals("")){
            Toast.makeText(this, "Ingresa la contrase√±a", Toast.LENGTH_SHORT).show();
        }
        else if (editTextUserTel.getText().toString().equals("")){
            Toast.makeText(this, "Ingresa el numero celular", Toast.LENGTH_SHORT).show();
        }
        else{
            progressDialog.show();
            str_nombre=editTextUser.getText().toString().trim();
            str_contra=editTextUserContra.getText().toString().trim();
            str_tel=editTextUserTel.getText().toString().trim();

          
                        StringRequest request2= new StringRequest(Request.Method.POST, url, new Response.Listener<String>() {
                            public void onResponse(String response) {

                                Toast.makeText(MainActivity.this, "personalToken", Toast.LENGTH_SHORT).show();
                            }
                        }, new Response.ErrorListener() {
                            @Override
                            public void onErrorResponse(VolleyError error) {

                                Toast.makeText(MainActivity.this, error.getMessage(), Toast.LENGTH_SHORT).show();

                            }
                        }
                        ){
                            protected Map<String, String>getParams() throws AuthFailureError {

                                Map<String,String> params = new HashMap<String, String>();
                                params.put("Token", personalToken);
                                return params;
                            }
                        };

                        RequestQueue requestQueue= Volley.newRequestQueue(MainActivity.this);
                        requestQueue.add(request2);



        }

    }
